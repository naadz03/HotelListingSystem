@model IEnumerable<HotelListingSystem.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<head>
    @Html.Partial("_eHead")
</head>

<body>
    <main>
        <div class="container_body">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create", new { id = 0 }, new { @class = "btn btn-outline-dark" })
            </p>
            <table class="table" id="example">

                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Sleeps</th>
                        <th>No. Of Beds</th>
                        <th>Baths</th>
                        <th>Balcony</th>
                        <th>Price per room</th>
                        <th>Room 1</th>
                        <th>Room 2</th>
                        <th></th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sleeps)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfBeds)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Baths)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Balcony)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PricePerRoom)
                        </td>
                        <td>
                            <img src="@Url.Action("DownloadRoomImageFile", "Rooms", new { Id = item.Id, doc_key_type = "r_hotel_room_first" })" alt="Hotel Image" style="height: 150px;width: 150px;" />
                        </td>
                        <td>
                            <img src="@Url.Action("DownloadRoomImageFile", "Rooms", new { Id = item.Id, doc_key_type = "r_hotel_room_2nd" })" alt="Hotel Image" style="height: 150px;width: 150px;" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Sleeps</th>
                        <th>No. Of Beds</th>
                        <th>Baths</th>
                        <th>Balcony</th>
                        <th>Price per room</th>
                        <th>Room 1</th>
                        <th>Room 2</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>

        </div>
    </main>
</body>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>