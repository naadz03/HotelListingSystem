@model IEnumerable<HotelListingSystem.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h4>All Rooms</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sleeps)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoOfBeds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baths)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balcony)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerRoom)
        </th>
        <th>
            Room 1
        </th>
        <th>
            Room 2
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sleeps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfBeds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baths)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balcony)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerRoom)
            </td>
            <td>
                <img src="@Url.Action("DisplayImage", "Rooms", new { roomId = item.Id, imageType = 1 })" alt="Hotel Image" style="height: 150px;width: 150px;" />
            </td>
            <td>
                <img src="@Url.Action("DisplayImage", "Rooms", new { roomId = item.Id, imageType = 2 })" alt="Hotel Image" style="height: 150px;width: 150px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
