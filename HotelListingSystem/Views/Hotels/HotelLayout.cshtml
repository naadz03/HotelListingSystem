        debugger;
        const Layout = document.getElementById("LayoutId").value;
        const HotelId = document.getElementById("Hotel_Id").value;
         $.ajax({
                url: '@Url.Action("UpdateHotelLayout", "Hotels")', // Update with your controller and action method names
                type: 'POST',
             data: { Id: HotelId, LayoutKey: Layout },
