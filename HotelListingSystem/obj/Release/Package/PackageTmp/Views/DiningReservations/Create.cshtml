@model HotelListingSystem.Models.DiningReservation

@{
    ViewBag.Title = "Create Dining Reservation";
}

<h4>Dining Reservation</h4>

@using (Html.BeginForm("Create", "DiningReservations", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(model => model.DiningId)
    @Html.DropDownList("DiningId", null, htmlAttributes: new { @class = "form-control" })

    @*@Html.DropDownListFor(model => model.DiningId, new SelectList(ViewBag.DiningList, "Id", "Name"), "Select Dining", new { @class = "form-control" })*@
    @Html.ValidationMessageFor(model => model.DiningId)
</div>

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsConfirmed)
        @Html.DropDownListFor(model => model.IsConfirmed, new SelectList(new[] {
            new SelectListItem { Text = "Confirmed", Value = "true" },
            new SelectListItem { Text = "Not Confirmed", Value = "false" },
            new SelectListItem { Text = "N/A", Value = "" }
        }, "Value", "Text"), "Select Confirmation", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.IsConfirmed)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NoOfPeople)
        @Html.EditorFor(model => model.NoOfPeople, new { @min = 1, @max = 50, htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NoOfPeople)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date)
        <input type="date" id="Date" name="Date" class="form-control datepicker" />

        @*@Html.EditorFor(model => model.Date, new { @class = "form-control" })*@
        @Html.ValidationMessageFor(model => model.Date)
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.HotelUserId)
            @Html.DropDownListFor(model => model.HotelUserId, new SelectList(ViewBag.HotelUserList, "Id", "UserName"), "Select Hotel User", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.HotelUserId)
        </div>*@

    <input type="submit" value="Create Reservation" class="btn btn-primary" />
}

@section scripts {
    <script>
        // Initialize datepicker
        $(function () {
            var currentDate = new Date();
            $('.datepicker').datepicker({
                minDate: currentDate
            });
        });
    </script>
}