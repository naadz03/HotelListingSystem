@model IEnumerable<HotelListingSystem.Models.RideRequest>

@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Html.Partial("_eHead")
</head>
<body>
    <main>
        <div class="container_body">
            <p>
                @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-sm btn-primary" }) &nbsp;&nbsp;
                @Html.ActionLink("Vehicles", "Vehicles", null, htmlAttributes: new { @class = "btn btn-sm btn-primary" }) &nbsp;&nbsp;

            </p>
            <table class="table">
                <tr>
                    <th>Full Name</th>
                    <th>Date/Time</th>
                    <th>Vehicle Reg</th>
                    <th>Pick-Up Location</th>
                    <th>Status</th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reservation.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PickUpDate)
                        </td>
                        <td>
                            @Html.Raw((item.Vehicle.RegNumber == null) ? "No Vehicle Information" : item.Vehicle.RegNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsApproved)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                <tfoot>
                    <tr>
                        <th>Full Name</th>
                        <th>Date/Time</th>
                        <th>Vehicle Reg</th>
                        <th>Pick-Up Location</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </main>
</body>
</html>
@Html.Partial("_eFooter")